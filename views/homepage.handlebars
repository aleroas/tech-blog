<header>
  <h1>Tech Blog</h1>
  {{#if logged_in}}
    <nav>
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Logout</a>
    </nav>
  {{else}}
    <nav>
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <a href="/signup">Sign Up</a>
    </nav>
  {{/if}}
</header>

<main>
  {{#each posts}}
    <article>
      <h2><a href="/post/{{id}}">{{title}}</a></h2>
      <p>by {{user.username}} on {{createdAt}}</p>
      <p>{{content}}</p>
    </article>
  {{/each}}
</main>
